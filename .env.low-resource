# Database - SQLite para economia de recursos
DATABASE_URL=file:./data/database.db

# Server - configurações otimizadas
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Session - configuração leve
SESSION_SECRET=sua_chave_secreta_muito_segura_aqui_minimo_32_caracteres

# Otimizações de memória
NODE_OPTIONS=--max-old-space-size=1024
UV_THREADPOOL_SIZE=2

# Configurações específicas para recursos limitados
MAX_UPLOAD_SIZE=5MB
CACHE_SIZE=50
LOG_LEVEL=warn